@model IEnumerable<FirstWebMVC.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Fullname">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Fullname">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Fullname">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
